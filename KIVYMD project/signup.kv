MDScreen:
    name: "signup"
    MDFloatLayout:
        md_bg_color: rgba(147, 233, 202)
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "25sp"
            text_color: rgba(60, 60, 60)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "WelcomePage"
        MDLabel:
            text: "Welcome new user!"
            font_size: "25sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color: rgba(60, 60, 60)
        MDLabel:
            text: "Creating an account..."
            font_size: "15sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(60, 60, 60)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .68}
            TextInput:
                hint_text: "Username"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "15sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .44, "center_y": .0}
                size_hint_y: .04
                md_bg_color: rgba(60, 60, 60)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .56}
            TextInput:
                id: email
                hint_text: "Email"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "15sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .44, "center_y": .0}
                size_hint_y: .04
                md_bg_color: rgba(60, 60, 60)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .44}
            TextInput:
                id: password
                hint_text: "Password"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "15sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .04
                md_bg_color: rgba(60, 60, 60)
        Button:
            text: "Sign Up"
            size_hint: .66, .065
            background_color: 0,0,0,0
            pos_hint: {"center_x": .5, "center_y": .3}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
                app.send_login(email, password)
            canvas.before:
                Color:
                    rgb: rgba(60, 60, 60)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: [5]
        MDLabel:
            text: "or"
            color: rgba(60, 60, 60)
            pos_hint: {"center_y": .22}
            font_size: "13sp"
            halign: "center"
        MDFloatLayout:
            md_bg_color: rgba(60, 60, 60)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .218}
        MDFloatLayout:
            md_bg_color: rgba(60, 60, 60)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .218}
        MDLabel:
            text: "Sign Up with..."
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": .15}
            color: rgba(0, 0, 255)
        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: "Google.jpg"
        MDTextButton:
            text: ""
            cols: 3
            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            on_release: app.login()
        MDLabel:
            text: "Already have an account?"
            font_size: "12sp"
            pos_hint: {"center_x": .68, "center_y": .04}
            color: rgba(0, 0, 255)
        MDTextButton
            text: "Sign In"
            font_size: "12sp"
            pos_hint: {"center_x": .75, "center_y": .04}
            color: rgba(0, 0, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"