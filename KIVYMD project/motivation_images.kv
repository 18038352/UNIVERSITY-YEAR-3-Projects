
MDScreen:
    name: "motivation_images"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        size_hint_y: .9
        bar_width: 0
        GridLayout:
            id: pics
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            spacing: 10
            padding: 10, 0
            Image:
                source: "motivation2.png"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation3.png"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation5.jpg"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation6.jpg"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation7.png"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation8.jpg"
                size_hint_y: None
                height: root.height
            Image:
                source: "motivation4.jpg"
                size_hint_y: None
                height: root.height
    NavBar:
        size_hint: .85, .1
        pos_hint: {"center_x": .5, "center_y": .15}
        elevation: 5
        md_bg_color: 1, 1, 1, 1
        radius: [16]
        MDGridLayout:
            cols: 4
            size_hint_x: .6
            spacing: 90
            pos_hint: {"center_x": .5, "center_y": .5}
            MDIconButton:
                id: nav_icon1
                icon: "home"
                ripple_scale: 0
                user_font_size: "25sp"
                text_color: 1, 0, 0, 1
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "BrainFeeder"
            MDIconButton:
                id: nav_icon2
                icon: "image"
                ripple_scale: 0
                user_font_size: "25sp"
                text_color: 1, 0, 0, 1
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "motivation_images"



