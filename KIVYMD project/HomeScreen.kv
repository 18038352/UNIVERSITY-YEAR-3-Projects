MDScreen:
    name: "HomeScreen"
    MDFloatLayout:
        md_bg_color: rgba(147, 233, 202)
        MDBoxLayout:
            orientation:'vertical'
        Image:
            source: "brainlogo1.png"
            size_hint: .70, .90
            pos_hint: {"center_x": .5, "center_y": .90}
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)

        MDFillRoundFlatButton:
            text: "User Guide"
            font_size: 14
            md_bg_color: rgba(0, 0, 255)
            pos_hint: {"center_x": .5, "center_y": .77}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "UserGuide"


        MDTextButton:
            text: "log-out"
            font_size: "12sp"
            pos_hint: {"center_x": .5, "center_y": .03}
            color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(18),dp(18),dp(18),dp(35)]
            spacing:dp(15)
            ElementCard:
                image:"to-do-list.png"
                text:"To-DO-List"
                Button:
                    text: ""
                    size_hint: .80, .8
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": .5, "center_y": .16}
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "ToDoScreen"
                    canvas.before:
                        Color:
                            rgb: rgba(255, 255, 255)
                        RoundedRectangle:
                            size: self.size
                            pos:self.pos
                            radius: [5]

            ElementCard:
                image:"studypic.jpg"
                text:"Brain Feeder"
                Button:
                    text: ""
                    size_hint: .80, .8
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": .5, "center_y": .16}
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "BrainFeeder"
                    canvas.before:
                        Color:
                            rgb: rgba(255, 255, 255)
                        RoundedRectangle:
                            size: self.size
                            pos:self.pos
                            radius: [5]


            ElementCard:
                image:"exercise.png.png"
                text:"Daily Exercise"
                Button:
                    text: ""
                    size_hint: .80, .8
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": .5, "center_y": .16}
