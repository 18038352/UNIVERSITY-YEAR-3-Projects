<ElementCard@MDCard>:
    md_bg_color: rgba(255, 255, 255)
    padding:dp(1)
    spacing:dp(1)
    radius:dp(5)
    ripple_behavior: True
    image:''
    text:""


    orientation:'vertical'
    Image:
        source:root.image
        size_hint_y: 2.2
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text



