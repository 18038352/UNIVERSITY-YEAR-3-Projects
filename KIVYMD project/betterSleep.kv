MDScreen:
    name: "betterSleep"
    MDFloatLayout:
        md_bg_color: rgba(120, 120, 120)
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "25sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "HomeScreen"
        MDIconButton:
            pos_hint: {"center_x": 0.65, "center_y": 0.10}
            icon: "stop_button.png"
            on_release: app.stop_btn()
        MDIconButton:
            pos_hint: {"center_x": 0.35, "center_y": 0.10}
            icon: "play_button.png"
            on_release: app.play_btn()
        Image:
            source: "sleepPage.png"
            size_hint: .8, .6
            pos_hint: {"center_x": .5, "center_y": .60}
